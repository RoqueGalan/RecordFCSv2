@using RecordFCS_Alt.Helpers
@using RecordFCS_Alt.Models
@model IEnumerable<HistorialLog>

@if (Model.Count() > 0)
{
    <h3><b>Piezas en el Movimiento</b></h3>


    foreach (var historialLog in Model)
    {
        <hr />
        <h3><b class="text-primary">@historialLog.TablaNombre</b></h3>

        <table class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>Campo</th>
                    <th>Valor Anterior</th>
                    <th>Valor Nuevo</th>
                </tr>
            </thead>


            <tbody>
                @foreach (var item in historialLog.HistorialLogDetalles.OrderBy(a=> a.ColumnaNombre))
                {
                    <tr>
                        <td><b>@item.ColumnaNombre</b></td>
                        <td><i class=" pull-right fa fa-arrow-right"></i><p>@item.ValorOriginal</p></td>
                        <td><p>@item.ValorNuevo</p></td>
                    </tr>
                }
            </tbody>


        </table>
    }


}